# PostgreSQL Database (Prisma)
# For local development: postgresql://user:password@localhost:5432/database_name
# For Railway: Automatically provided by Railway PostgreSQL service
DATABASE_URL=postgresql://user:password@localhost:5432/lapesqueria

# Redis Cache (for sessions, rate limiting, real-time features)
# For local development: redis://localhost:6379
# Format: redis://[username]:[password]@[host]:[port]/[database]
REDIS_URL=redis://localhost:6379

# NextAuth Configuration
# Generate a secure random string: openssl rand -base64 32
NEXTAUTH_SECRET=your-secure-random-secret-minimum-32-characters-required
# For local: http://localhost:3000
# For Railway: https://your-app.up.railway.app
NEXTAUTH_URL=http://localhost:3000

# Vercel Blob Storage (for product images and media uploads)
# Create a Vercel Blob store and get the token from Vercel dashboard
# BLOB_READ_WRITE_TOKEN is the standard Vercel env var name
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# Stripe Payment Integration (PRODUCTION)
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
# Use live keys (sk_live_* and pk_live_*) for production
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret

# Application URL
# Used for absolute URLs in emails and redirects
NEXT_PUBLIC_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# Analytics - Google Analytics 4 (FREE)
# 1. Go to https://analytics.google.com
# 2. Create a new GA4 property
# 3. Get the Measurement ID (starts with G-)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Analytics - Microsoft Clarity (FREE - Heatmaps & Session Recordings)
# 1. Go to https://clarity.microsoft.com
# 2. Create a new project
# 3. Get the Project ID from the setup instructions
NEXT_PUBLIC_CLARITY_PROJECT_ID=your-clarity-project-id

# AI Features - Anthropic Claude API (for AI-powered reports)
# Get your API key from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Cloudinary - Get from https://cloudinary.com/console
# Sign up for free tier (25GB storage, 25GB monthly bandwidth, 300K transformations/month)
# Use CLOUDINARY_URL (recommended) or individual credentials:
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_URL=cloudinary://your-real-api-key:your-real-api-secret@your-cloud-name

# IndexNow Configuration for SEO
# Generate a secure API key for IndexNow (any random string, 8-128 characters)
# You can generate one at: https://www.bing.com/indexnow/getstarted
INDEXNOW_KEY=your_generated_indexnow_key_here

# Site URL for IndexNow submissions
NEXT_PUBLIC_SITE_URL=https://lapesqueria.com

# ============================================================================
# CLOVER POS INTEGRATION
# ============================================================================
# Get these from your Clover Developer Dashboard: https://www.clover.com/developers
#
# Option 1: Use the admin panel at /admin/clover-sync to enter credentials manually
# Option 2: Set these environment variables for automatic configuration
#
# CLOVER_APP_ID - Your Clover App ID from the developer dashboard
CLOVER_APP_ID=your_clover_app_id

# CLOVER_APP_SECRET - Your Clover App Secret (keep this secure!)
CLOVER_APP_SECRET=your_clover_app_secret

# CLOVER_MERCHANT_ID - Your Merchant ID (found in Clover Dashboard URL or Account Settings)
# Format: Usually a 13-character alphanumeric string like "ABC1234567890"
CLOVER_MERCHANT_ID=your_merchant_id

# CLOVER_ACCESS_TOKEN - OAuth access token for API requests
# You can get this by:
# 1. Using the OAuth flow in the app, or
# 2. From Clover Dashboard -> Settings -> API Tokens -> Create Token
CLOVER_ACCESS_TOKEN=your_access_token

# CLOVER_ENVIRONMENT - sandbox or production
# Use 'sandbox' for testing, 'production' for live data
CLOVER_ENVIRONMENT=production
